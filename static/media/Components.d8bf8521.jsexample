// Class Components extend React.Component and 
// include a render function.
class ClassComponent extends React.Component {
  // Class Components take a single object argument, props,
  // which needs to be passed to the parent.
  // This method is optional if nothing else needs
  // to be done during the constructor.
  constructor(props) {
    super(props);
  }
  render() {
    const {text} = this.props;
    return (
      <center>Class Component example: {text}</center>
    );
  }
}

// Functional Components are similar to the render function
// of a class component, without the additional structure.
// Functional Components also take a single argument, which
// is an object containing all provided props.
function FunctionalComponent(props) {
  const {text} = props;
  return (
    <center>Functional Component example: {text}</center>
  );
}

const initial = {
  text: 'Change me'
};

render(
  <PropOverride initial={initial}>
    <ClassComponent />
    <FunctionalComponent />
  </PropOverride>
);
